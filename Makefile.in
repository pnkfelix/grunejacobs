.PHONY: default

# load the variables exported by the configure script
include config.mk

RUSTC ?= rustc

LIB_SO:=$(shell $(RUSTC) --crate-file-name $(CFG_SRC_DIR)/lib.rs)

$(info LIB_SO $(LIB_SO))

$(LIB_SO): $(CFG_SRC_DIR)/lib.rs
	$(RUSTC) $<

default: $(LIB_SO)
